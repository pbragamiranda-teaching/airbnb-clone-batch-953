<h1>Flats</h1>

<div class="container d-flex">
  <% @flats.each do |flat| %>

    <div class="card m-1" style="width: 18rem;">
      <img class="card-img-top" src="<%= flat['imageUrl'] %>" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"><%= flat['name'] %></h5>
        <p class="card-text"> Only for: <%= flat['price'] %> <%= flat['priceCurrency'] %> </p>
        <a href="#" class="btn btn-primary">Check it out!</a>
      </div>
    </div>
  <% end %>
</div>
